<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_third"
    android:background="@drawable/back10">

    <EditText
        android:id="@+id/username"
        android:layout_width="316dp"
        android:layout_height="70dp"
        android:layout_marginTop="112dp"
        android:width="300dp"
        android:height="100dp"
        android:backgroundTint="#FFEA00"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textColor="#FFEA00"
        android:textColorHint="#FFEA00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="319dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:width="300dp"
        android:height="100dp"
        android:backgroundTint="#FFEA00"
        android:ems="10"
        android:inputType="textPersonName"
        android:password="false"
        android:hint="Password"
        android:textColor="#FFEA00"
        android:textColorHint="#FFEA00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/conf_pass"
        android:layout_width="318dp"
        android:layout_height="74dp"
        android:layout_marginTop="12dp"
        android:width="300dp"
        android:height="100dp"
        android:backgroundTint="#FFEA00"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Confirm Password"
        android:textColor="#FFEA00"
        android:textColorHint="#FFEA00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass" />

    <Button
        android:id="@+id/sign_up_user"
        android:layout_width="183dp"
        android:layout_height="73dp"
        android:background="#000A113E"
        android:text="Sign up"
        android:textColor="#FFEA00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conf_pass"
        app:layout_constraintVertical_bias="0.19" />
</androidx.constraintlayout.widget.ConstraintLayout>