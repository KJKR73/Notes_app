<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/back69">

    <Button
        android:id="@+id/logout"
        android:layout_width="150sp"
        android:layout_height="59dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/vidaloka"
        android:text="logout"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_area" />

    <EditText
        android:id="@+id/text_area"
        android:layout_width="392dp"
        android:layout_height="511dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/vidaloka"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:text="Enter you notes here"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear_text"
        app:layout_constraintVertical_bias="0.304" />

    <Button
        android:id="@+id/clear_text"
        android:layout_width="150sp"
        android:layout_height="59dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/vidaloka"
        android:text="Clear"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_text" />

    <Button
        android:id="@+id/save_text"
        android:layout_width="150sp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/vidaloka"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>